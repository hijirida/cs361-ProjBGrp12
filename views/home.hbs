	<body>
		<div class="container">
			<h1>{{dbResponse}}</h1>
			<div class='jumbotron'>
				<div class='container'>
					<h1>Fit for Charity</h1>
					<p>Working out to help others</p>
				</div>
			</div>	
			<div class="form-group" method="GET" id='userType'>
				<label>Are you:</label>
				<div class="radio">
				  <label><input type="radio" name="select-type" value="donorsetup">Create a new donor profile in our database</label>
				</div>
                                <div class="radio">
				  <label><input type="radio" name="select-type" value="exerciser">Looking to support a charity by exercising</label>
				</div>
				<div class="radio">
				  <label><input type="radio" name="select-type" value="donation">Looking to donate to a charity</label>
				</div>
				<div class="radio">
				  <label><input type="radio" name="select-type" value="organization">Add your charity</label>
				</div>
				<button type="submit" class="btn btn-primary" id='submitUserType'>Submit</button>
			</div>
		</div>
	</body>
