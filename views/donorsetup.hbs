<html lang="en">
  <head>
    <title>CS361 Project</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src='/js/app.js'></script>  
  </head>
    <body>

      <div class="container">

        <div class='jumbotron'>
          <h1>Create your  donor profile</h1>
        </div>

       <form class="form-horizontal" method='GET' action='/addDonor'>
          <fieldset class="form-group">
            <legend>Please complete all required fields</legend>
            <div class='form-group'>
              <label class="col-sm-2 control-label">Username:</label>
              <div class="col-sm-10">
                <input type='text' name='username'>
              </div>
            </div>
            <div class='form-group'>
              <label class="col-sm-2 control-label">Password (Not encrypted!):</label>
              <div class="col-sm-10">
                <input type='text' name='password'>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">First Name:</label>
              <div class="col-sm-10">
                <input type='text' name='firstname'>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Last Name:</label>
              <div class="col-sm-10">
                <input type='text' name='lastname'>
              </div>
	    </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Short Description:</label>
              <div class="col-sm-10">
                <input type='text' name='shortdescription'>
              </div>
	    </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary">
              </div>
            </div>
          </fieldset>
       </form>

       <div class="container">
        <h3>Current donors:</h3>
        <table class="table table-bordered" id="donorTable">
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
	      <th>Password</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Short Description</th>
            </tr>
          </thead>
          <tbody id="donorBody">
            {{#each results}}
            <tr>
              <td>{{this.donor_id}}</td>
              <td>{{this.username}}</td>
              <td>{{this.password}}</td>
              <td>{{this.first_name}}</td>
              <td>{{this.last_name}}</td>
              <td>{{this.short_description}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
     </div>

     </div>
   
   </body>
</html>

