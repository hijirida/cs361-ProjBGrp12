<html lang="en">
  <head>
    <title>CS361 Project</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src='/js/app.js'></script>  
  </head>
    <body>
      <div class="container">
       <div class='jumbotron'>
        <div class='container'>
          <h1>Success!</h1>
	         <p>We created your new donor profile (see below).</p>
        </div>
       </div>
       <h2><a href="/donor">Back to the donor login page</a></h2>

       <div class="container">
        <h3>Current donors:</h3>
        <table class="table table-bordered" id="donorTable">
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Password</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Short Description</th>
            </tr>
          </thead>
          <tbody id="donorBody">
            {{#each results}}
            <tr>
              <td>{{this.donor_id}}</td>
              <td>{{this.username}}</td>
              <td>{{this.password}}</td>
              <td>{{this.first_name}}</td>
              <td>{{this.last_name}}</td>
              <td>{{this.short_description}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        {{> linkToHome}}
     </div>
   </body>
</html>
